<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:contentDescription="@string/add_icon" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_expense24"
        android:contentDescription="@string/expense" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_expense"
        android:textColor="@color/gold"
        android:layout_marginStart="30dp"
        android:textSize="16sp"/>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_budget_24"
        android:contentDescription="@string/budget" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_a_budget"
        android:textColor="@color/gold"
        android:layout_marginStart="30dp"
        android:textSize="16sp"/>




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_bills_24"
        android:contentDescription="@string/bills" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_a_bill"
        android:textColor="@color/gold"
        android:layout_marginStart="30dp"
        android:textSize="16sp"/>


</LinearLayout>